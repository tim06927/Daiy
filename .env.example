# Daiy Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: OpenAI API Key
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-api-key-here

# =============================================================================
# OPTIONAL: Flask Server Settings
# =============================================================================
# Host to bind to (default: 0.0.0.0 for all interfaces)
# FLASK_HOST=0.0.0.0

# Port to run on (default: 5000, or PORT env var for cloud platforms)
# FLASK_PORT=5000

# Enable debug mode (default: False - set to True for development)
# FLASK_DEBUG=True

# Flask environment (default: development)
# Set to "production" on Render/cloud platforms for secure cookies
# FLASK_ENV=production

# Secret key for Flask sessions (REQUIRED in production)
# Generate with: python -c "import os; print(os.urandom(32).hex())"
# FLASK_SECRET_KEY=your-secret-key-here

# =============================================================================
# OPTIONAL: Basic Authentication
# =============================================================================
# Set both to enable HTTP Basic Auth (useful for public demos)
# DEMO_USER=demo
# DEMO_PASS=changeme

# =============================================================================
# OPTIONAL: Product Limits
# =============================================================================
# Maximum number of products per category to show to LLM
# MAX_CASSETTES=5
# MAX_CHAINS=5
# MAX_TOOLS=5

# =============================================================================
# OPTIONAL: UI Settings
# =============================================================================
# Show demo notice on homepage (default: True)
# SHOW_DEMO_NOTICE=True
